<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.TechnologySelect">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/select_tech_title"
        android:layout_width="match_parent"
        android:text="SELECT TECHNOLOGY"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_height="wrap_content" />

 <android.support.v7.widget.CardView
     app:cardElevation="4dp"
     android:layout_below="@id/select_tech_title"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <LinearLayout
             android:id="@+id/select_layout1"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="0dp"
                 android:text="SITE NAME"
                 android:textSize="14sp"
                 android:textColor="@android:color/black"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="1"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/select_tech_sitetitle"
                 android:layout_width="0dp"
                 android:layout_weight="4"
                 android:gravity="center"
                 android:lines="4"
                 android:textAlignment="center"
                 android:layout_height="wrap_content"
                 android:text="Site Name: ADC Muthithi"
                 android:textSize="18sp" />
         </LinearLayout>


         <LinearLayout
             android:id="@+id/select_layout2"
             android:layout_below="@id/select_layout1"
             android:layout_width="match_parent"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
             <TextView
                 android:layout_width="0dp"
                 android:text="SITE ID"
                 android:textSize="14sp"
                 android:textColor="@android:color/black"
                 android:layout_gravity="center_vertical"
                 android:layout_weight="1"
                 android:layout_height="wrap_content" />
             <TextView
                 android:id="@+id/select_tech_siteId"
                 android:layout_width="0dp"
                 android:gravity="center"
                 android:layout_height="wrap_content"
                 android:layout_weight="4"
                 android:lines="2"
                 android:text="Site ID: 123456"
                 android:textSize="18sp" />
         </LinearLayout>




         <Spinner
             android:id="@+id/select_tech_spinner"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:spinnerMode="dialog"
             android:layout_below="@+id/select_layout2"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="30dp"
             android:text="Select Technology"
             android:textSize="18sp" />

         <Button
             android:id="@+id/choose_sector_btn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/select_tech_spinner"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="30dp"
             android:drawableRight="@drawable/ic_chevron_right_black_24dp"
             android:text="CHOOSE SECTOR"
             android:layout_marginBottom="20dp"
             android:textAlignment="center" />

     </RelativeLayout>
 </android.support.v7.widget.CardView>



</RelativeLayout>

</FrameLayout>