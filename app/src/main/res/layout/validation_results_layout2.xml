<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="match_parent">
   <LinearLayout
       android:id="@+id/layout_results_1"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="0dp"
           android:gravity="center"
           android:text="TECHNOLOGY"
           android:padding="5dp"
           android:textStyle="bold"
           android:textSize="15sp"
           android:layout_weight="1"
           android:layout_height="wrap_content" />

       <TextView
           android:id="@+id/tech_type"
           android:gravity="center"
           android:layout_width="0dp"
           android:text="LTE 800"
           android:padding="5dp"
           android:textSize="15sp"
           android:layout_weight="1"
           android:layout_height="wrap_content" />

   </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_results_2"
        android:layout_below="@id/layout_results_1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:text="SECTOR"
            android:gravity="center"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sector"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="2"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/results_table"
        android:layout_below="@id/layout_results_2"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@drawable/table_row_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:text="Parameter names"
                android:background="@drawable/table_cell_bg"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:text="Configured values"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:text="Threshold status"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:text="Set values"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:background="@drawable/table_row_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:text="Heading"
                android:background="@drawable/table_cell_bg"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/configured_heading_value"
                android:layout_width="0dp"
                android:text="90"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/heading_thresh_status"
                android:layout_width="0dp"
                android:text="failed"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/heading_set_status"
                android:layout_width="0dp"
                android:text="passed"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:background="@drawable/table_row_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:text="Roll"
                android:background="@drawable/table_cell_bg"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/configured_row_value"
                android:layout_width="0dp"
                android:text="45"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/roll_thresh_status"
                android:layout_width="0dp"
                android:text="passed"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/roll_set_status"
                android:layout_width="0dp"
                android:text="failed"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:background="@drawable/table_rowlast_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:layout_width="0dp"
                android:text="Pitch"
                android:gravity="center"
                android:background="@drawable/table_cell_bg"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/configured_pitch_value"
                android:layout_width="0dp"
                android:text="37"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pitch_thresh_status"
                android:layout_width="0dp"
                android:text="passed"
                android:background="@drawable/table_cell_bg"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pitch_set_status"
                android:layout_width="0dp"
                android:text="failed"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/overall_message_title"
        android:text="OVERALL RESULTS"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/results_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_results_3"
        android:orientation="horizontal"
        android:layout_below="@id/overall_message_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Threshold status"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overall_message_threshold"
            android:text="Roll value meet threshold limits but heading and Pitch did not"
            android:gravity="center"
            android:maxLines="3"
            android:padding="5dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_results_4"
        android:orientation="horizontal"
        android:layout_below="@id/layout_results_3"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Set Values status"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/overall_message_status"
            android:text="Roll value meet threshold limits but heading and Pitch did not"
            android:gravity="center"
            android:maxLines="3"
            android:padding="5dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>