<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="match_parent"
    tools:context=".PhotoUpload">

    <TextView
        android:id="@+id/photo_upload_title"
        android:text="CAPTURE SITE PHOTO TO CONTINUE"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_below="@id/photo_upload_title"
        android:layout_width="match_parent"
        android:src="@drawable/ic_camera_alt_black_24dp"
        android:layout_margin="10dp"
        android:minHeight="300dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/capture_btn"
        android:layout_below="@id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:text="capture Image"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_below="@id/capture_btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:inputType="text"
        android:hint="Enter image description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Upload Image"
        android:layout_below="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>